<div class="container mt-5" style="max-width: 450px;">
  <h3 class="text-center mb-4">Đăng nhập</h3>

  <form action="/auth/login" method="POST" class="mb-3">
    <div class="mb-3">
      <label>Email</label>
      <input type="email" class="form-control" name="email" required>
    </div>

    <div class="mb-3">
      <label>Mật khẩu</label>
      <input type="password" class="form-control" name="password" required>
    </div>

    <button class="btn btn-primary w-100" type="submit">Đăng nhập</button>
  </form>

  <div class="text-center my-3 fw-bold">hoặc</div>

  <div class="d-flex flex-column gap-2">
    <a href="/auth/google" class="btn btn-outline-danger w-100">
      <i class="bi bi-google me-2"></i> Đăng nhập với Google
    </a>

    <a href="/auth/github" class="btn btn-dark w-100">
      <i class="bi bi-github me-2"></i> Đăng nhập với GitHub
    </a>

    <!-- Chỉ thêm nút Facebook, OAuth làm sau -->
    <a href="/auth/facebook" class="btn btn-primary w-100">
      <i class="bi bi-facebook me-2"></i> Đăng nhập với Facebook
    </a>
  </div>

  <p class="text-center mt-3">
    Chưa có tài khoản?
    <a href="/auth/signup">Đăng ký ngay</a>
  </p>
</div>

<div class="card">
  <h5 class="card-header">
    Categories
    <a class="btn btn-sm btn-outline-success float-end" href="/admin/categories/add" role="button">
      <i class="bi bi-plus-lg"></i> Add Category
    </a>
  </h5>
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Category</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each list}}
        <tr class="">
          <td scope="row">{{catid}}</td>
          <td>{{catname}}</td>
          <td class="text-end">
            <a class="btn btn-sm btn-outline-primary" href="/admin/categories/edit?id={{catid}}" role="button">
              <i class="bi bi-pencil-square"></i> Edit
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="card-footer text-muted">Footer</div>
</div>